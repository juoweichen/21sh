#include "../../includes/astree.h"
#include "../../includes/exec.h"

void execute_simple_command(t_astnode *astree)
{
	execute_cmd_name(astree->left);
	execute_cmd_suffix(astree->right);
}

void execute_command(t_astnode *astree)
{
	execute_simple_command(astree);
}

void execute_pipe_sequence(t_astnode *astree)
{
	execute_command(astree->left);
	if (ft_strcmp(astree->data, "|") != 0)
		return ;
	execute_pipe_sequence(astree->right);
}

void execute_pipeline(t_astnode *astree)
{
	execute_pipe_sequence(astree);
}

void execute_and_or(t_astnode *astree)
{
	execute_pipeline(astree);
}

void execute_list(t_astnode *astree)
{
	execute_and_or(astree->left);
	if (ft_strcmp(astree->data, "&") != 0 &&
		ft_strcmp(astree->data, ";") != 0)
		return ;
	execute_list(astree->right);
}

void execute_complete_command(t_astnode *astree)
{
	execute_list(astree->left);
} 

void execute_astree(t_astnode *astree)
{
	execute_complete_command(astree);
}